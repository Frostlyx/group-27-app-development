<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_welcome_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:configChanges="orientation"
    android:launchMode="standard"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_marginTop="10dp"
        android:baselineAligned="false"
        app:srcCompat="@drawable/grocery_app_welcome_icon" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:clickable="false"
        android:gravity="center"
        android:text="Making grocery shopping more convenient"
        android:textSize="20sp"
        android:layout_margin="12dp"/>

    <Button
        android:id="@+id/loginNow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Log-in"
        android:background="@drawable/login_btn"
        android:textColor="@color/black"
        android:layout_marginHorizontal="30dp" />

    <Button
        android:id="@+id/registerCustomerAccount"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/reg_btn"
        android:clickable="true"
        android:text="Register as customer" />

    <Button
        android:id="@+id/registerStoreAccount"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/reg_btn"
        android:clickable="true"
        android:text="Register as store owner"
        android:layout_marginBottom="10dp"/>

</LinearLayout>
